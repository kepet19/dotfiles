font-3 = "Font Awesome:style=Regular:pixelsize=8;1"
;font-3 = "Font Awesome:style=Regular"
;font-4 = "Font Awesome 5 Free, Font Awesome 5 Brands:pixelsize=8;1"

monitor = ${env:MONITOR:DP-4}
width = 94%
height = 33
offset-x = 3%
offset-y = 4
padding-right = 5
padding-left = 5

; Rounded corners
radius-top = 5.0
radius-bottom = 5.0

background = #4B5A5A
transparent= false
foreground = #E3E2E1
;foreground = ${xrdb:color7}
;background = ${xrdb:color16}

;tray-position = right
;tray-padding = 5
;tray-transparent = false
;tray-background = #4B5A5A


modules-left = i3 
modules-center = date
modules-right = cpu temperature memory


override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 2

;label-unfocused-foreground = #07322B
;label-unfocused-padding = 1
;label-visible-foregroud = #07322B
;label-visible-padding = 1
;label-focused-foreground = #9A94BC
;label-focused-padding = 1
;label-urgent-padding = 1

;ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = "1;Óûï" 
; ÔÑ†
ws-icon-1 = "2;Ôâ®"
ws-icon-2 = "3;ÔÇÜ"
ws-icon-3 = "4;ÔÜÅ"
ws-icon-4 = "5;ÔÄ•"
ws-icon-5 = 6;ÔÉÉ
ws-icon-6 = 7;Ôí•
ws-icon-7 = 8;ÔÇÉ
ws-icon-8 = 9;Óûï
ws-icon-9 = 10;ÔåÄ

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
;label-mode-padding = 2
label-mode-background = #9A94BC

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name% %icon%
;label-focused-foreground = #ffffff
label-focused-background = #9A94BC
label-focused-underline = #fba922
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %index% %icon%
label-unfocused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %index% %icon%
label-visible-underline = #555555
label-visible-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index% %icon%
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

icon = " ÔÅ≥ "
date = "%m/%d/%y"
date-alt = " %d"

time = " %H:%M"
time-alt =  %H:%M

label = %date% %time%

[module/volume]
label-padding = 7
type = internal/volume

label-volume = "  "
label-volume-foreground = ${root.foreground}

bar-volume-padding = 10
bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <bar-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = muted
label-muted-padding = 2
label-muted-foreground = #66

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-1 = üîâ
ramp-volume-2 = üîä

; If defined, it will replace <ramp-volume> when
; headphones are plugged in to `headphone_control_numid`
; If undefined, <ramp-volume> will be used for both
; Only applies if <ramp-volume> is used
ramp-headphones-0 = ÔÄ•
ramp-headphones-1 = ÔÄ•

[module/memory]
type = internal/memory
label = %gb_used%/%gb_free%
label-padding = 2

[module/cpu]
type = internal/cpu
format = <label>
label = CPU %percentage%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = TEMP %temperature%
label-padding = 2

[module/title]
type = internal/xwindow
label-maxlen = 20
format-padding = 2
format-foregroud = #4F5B47

[module/wireless-network]
type = internal/network
interface = wlp1s0

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% Ôá´     
label-padding = 7
padding-right = 2

label-disconnected = not connected

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/ 
battery = BAT0 
adapter = ADP1


; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5


; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
;format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = %percentage%% 

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = %percentage%% 

; Available tokens:
;   %percentage% (default)
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = ÔÅ±
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔÉß


; Only applies if <animation-charging> is used
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
; Framerate in milliseconds
animation-charging-framerate = 750


[module/wlan]
type = internal/network
interface = wlan0
interval = 5
label-connected = %essid%  Ôá´

[module/wlan2]
inherit = module/wlan
interface = wlp1s0


[module/github]
type = internal/github
label-padding = 2

; Accessing an access token stored in file
token = ${file:/home/ajmwagar/etc/POLYBAR/access.token}

; Accessing an access token stored in an environment variable

; Whether empty notifications should be displayed or not
empty-notifications = false


; Number of seconds in between requests
interval = 10

; Available tags:
;   <label> (default)
format = <label>

; Available tokens:
;   %notifications% (default)
; Default: Notifications: %notifications%
label = %notifications% ÔÇõ    
label-spacing = 20

